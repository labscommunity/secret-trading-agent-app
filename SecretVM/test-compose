version: '3.8'

services:
  my-test-server:
    # Use the lightweight 'nginx:alpine' image from Docker Hub
    image: nginx:alpine
    
    # This policy ensures the container restarts automatically if it ever stops
    restart: always
    
    # This tells the SecretVM that our container is listening on port 80.
    # The platform will handle how to expose this port to the outside world.
    ports:
      - "80:80"